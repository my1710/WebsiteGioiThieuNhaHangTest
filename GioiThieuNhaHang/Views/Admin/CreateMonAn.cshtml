@model GioiThieuNhaHang.Models.MonAn

@{
    ViewData["Title"] = "Thêm món ăn";
}

<h2>Thêm món ăn</h2>

<form asp-action="CreateMonAn" method="post">
    <div class="form-group">
        <label>Tên món</label>
        <input asp-for="TenMon" class="form-control" />
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Gia" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Link ảnh</label>
        <input asp-for="HinhAnh" class="form-control" />
    </div>
    <div>
    <select asp-for="IdLoai" asp-items="ViewBag.LoaiMon">
        <option value="">-- Chọn loại món --</option>
    </select>
    </div>

    <button type="submit" class="btn btn-success mt-2">Lưu</button>
</form>
