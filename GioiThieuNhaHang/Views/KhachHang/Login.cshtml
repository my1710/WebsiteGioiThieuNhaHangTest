@model GioiThieuNhaHang.Models.KhachHangLoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<style>
    body {
        background-color: #fff9f0; /* nền trắng kem */
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 40px;
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        border-top: 6px solid #ff9800; /* vàng cam */
    }

    .login-title {
        text-align: center;
        color: #ff9800;
        margin-bottom: 30px;
        font-weight: bold;
        font-size: 28px;
    }

    .form-label {
        color: #333;
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        margin-bottom: 20px;
    }

    .btn-login {
        width: 100%;
        background-color: #ff9800;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        padding: 10px;
        transition: background-color 0.3s ease;
    }

    .btn-login:hover {
        background-color: #e68900;
    }

    .alert {
        margin-top: 10px;
    }
    /* Định nghĩa chung cho các nút */
    .btn {
        display: inline-block;
        list-style: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: bold;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn a {
            text-decoration: none;
            color: white;
        }

        /* Nút vàng cam (primary) */
        .btn.primary {
            background-color: #ff9800;
        }

            .btn.primary:hover {
                background-color: #e68900;
                transform: translateY(-2px);
            }

        /* Nút đen trắng (secondary) */
        .btn.secondary {
            background-color: #333;
        }

            .btn.secondary:hover {
                background-color: #000;
                transform: translateY(-2px);
            }

</style>

<h2>Đăng nhập</h2>

@if (ViewBag.ThongBao != null)
{
    <div class="alert alert-warning">@ViewBag.ThongBao</div>
}

<form asp-action="Login" method="post">
    < a>tài khoản email của bạn </a>
    <input asp-for="Email" class="form-control" />
    <input asp-for="MatKhau" class="form-control" type="password" />

    <div class="text-center mt-3">
    <button type="submit" class="btn primary w-100">Đăng nhập</button>
    </div>
</form>

@if (TempData["ThongBao"] != null)
{
    <div class="alert alert-warning">@TempData["ThongBao"]</div>
}



