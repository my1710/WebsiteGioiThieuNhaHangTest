            align-items: center;
            padding: 20px 30px;
            border-bottom: 2px solid #e5e5e5;
            flex-wrap: wrap;
        }

        .logo {
            font-size: 28px;
            font-weight: bold;
            color: #d47900;
        }

        nav ul {
            list-style: none;
