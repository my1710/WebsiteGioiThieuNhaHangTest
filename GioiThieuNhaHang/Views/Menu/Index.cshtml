                text-decoration: none;
                color: #333;
                font-weight: 500;
                border-bottom: 2px solid transparent;
                padding-bottom: 4px;
            }

                nav ul li a.active,
                nav ul li a:hover {
                    border-bottom: 2px solid #d47900;
                    color: #d47900;
                }

        .hero {
            background-color: #111;
            color: #fff;
            padding: 60px 30px;
            text-align: center;
        }

        .hero-content {
            max-width: 800px;
            margin: auto;
        }

        .hero h1 {
            font-size: 38px;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 16px;
            margin-bottom: 25px;
            color: #ccc;
        }

        .buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
        }

        .btn {
            padding: 12px 24px;
            font-weight: bold;
            border-radius: 4px;
            transition: 0.3s;
            display: inline-block;
        }

        .primary {
            background-color: #d47900;
            color: #fff;
        }

            .primary:hover {
                background-color: #b56600;
            }

        .secondary {
            border: 2px solid #fff;
            color: #fff;
        }

            .secondary:hover {
                background-color: #fff;
                color: #111;
            }

        .about {
            background-color: #fff;
            padding: 60px 30px;
        }

        .about-container {
            display: flex;
            gap: 30px;
            align-items: center;
            flex-wrap: wrap;
            justify-content: center;
        }

        .about-image img {
            max-width: 280px;
            width: 100%;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .about-text {
            max-width: 500px;
        }

            .about-text h2 {
                font-size: 26px;
                margin-bottom: 20px;
            }

            .about-text p {
                margin-bottom: 16px;
            }

        .special-menu {
            background-color: #fff7e6;
            padding: 60px 30px;
            text-align: center;
        }

            .special-menu h2 {
                font-size: 28px;
                margin-bottom: 10px;
            }

            .special-menu p {
                margin-bottom: 30px;
                color: #555;
            }

        .menu-items {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .menu-card {
            background: #fff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            width: 90%;
            max-width: 300px;
            text-align: left;
        }

            .menu-card img {
                width: 100%;
                border-radius: 8px;
                background-color: #eee;
                margin-bottom: 15px;
            }

            .menu-card h3 {
                font-size: 18px;
                margin-bottom: 8px;
            }

            .menu-card p {
                font-size: 14px;
                margin-bottom: 12px;
                color: #555;
            }

            .menu-card .price {
                color: #d47900;
                font-weight: bold;
                margin-bottom: 10px;
            }

        .center-btn {
            margin-top: 30px;
        }

        .large {
            padding: 14px 32px;
            font-size: 16px;
            border-radius: 24px;
        }

        .booking-cta {
            background-color: #d47900;
            padding: 60px 30px;
            color: #fff;
            text-align: center;
        }

            .booking-cta h2 {
                font-size: 26px;
                margin-bottom: 16px;
            }

            .booking-cta p {
                font-size: 16px;
                margin-bottom: 30px;
            }

        .btn.white {
            background-color: #fff;
            color: #d47900;
            font-weight: bold;
            padding: 12px 24px;
            border-radius: 24px;
        }

        /* Responsive */
        media (max-width: 768px) {
            .hero h1

        {
            font-size: 30px;
        }

        .about-container {
            flex-direction: column;
            text-align: center;
        }

        .about-text {
            max-width: 100%;
        }

        nav ul {
            justify-content: center;
            flex-wrap: wrap;
        }

        header {
            flex-direction: column;
            align-items: flex-start;
        }

        }

        media (max-width: 480px) {
            .btn, .large

        {
            width: 100%;
            text-align: center;
        }

        .menu-card {
            width: 100%;
        }

        }
    </style>
</head>
